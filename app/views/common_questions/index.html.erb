<id="top">
<div class="page-header">
   <h1>Frequently Asked Questions</h1>
</div>

<% @CommonQuestions.each do |x| %>
<ul>
  <li>
    <%= link_to x.question, "##{x.slug}" %>
  </li>
</ul>
<% end %>

<div class="row">
  <div class="col-md-6">
    <% @CommonQuestions.each do |x| %>
      <h3 id="<%= x.slug %>">
        <%= x.question %>
      </h3>
      <p>
        <%= x.answer %>
      </p>
      <p>
        <%= link_to "top", "#top" %>
      </p>
    <% end %>
  </div>
</div>
