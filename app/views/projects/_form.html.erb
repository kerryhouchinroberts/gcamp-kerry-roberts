<% if flash.now[:alert] %>
<div id="error_explanation" class = "alert alert-danger col-md-offset-2">
  <h2><%= pluralize(@project.errors.count, "error") %> prohibited this form from being saved:</h2>

  <ul>
    <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@project, html: {class: "form-horizontal"}) do |f| %>

<div class="form-group">
  <label class="control-label col-md-2">
    <%= f.label :name, 'Name'  %>
  </label>
  <div class="form-controls col-md-4">
    <%= f.text_field :name, :class =>'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="actions">
    <div class="col-md-offset-2 col-md-4">
      <input class="btn btn-primary"
        <%= f.submit %>
        <%= link_to 'Cancel', projects_path, class:"btn btn-default" %>
      </div>
    </div>
</div>

<% end %>
