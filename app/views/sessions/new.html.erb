<div class ="row">
  <div class ="well col-md-offset-4 col-md-4">
    <h1>Sign into gCamp</h1>

    <%= form_tag '/login' do %>
      <div class ="form-group">
        <label>
          <%= label_tag :email %>
        </label>
        <div>
          <%= email_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>

      <div class ="form-group">
        <label>
          <%= label_tag :password %>
        </label>
        <div>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>

      <div class ="form-group">
        <%= submit_tag 'Sign In', :class =>'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
