<% if flash[:notice] %>
<div class = "alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="page-header">
  <div class="pull-right">
  <%= link_to 'New Task', new_task_path, class:"btn btn-info" %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th class="text-left">Due On</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td><%= task.change_date %></td>
        <td class="text-right"><%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %>
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
